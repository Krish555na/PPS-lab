import math

def quad_roots(a,b,c):
	
	discriminant = b**2-4*a*c
	if discriminant >0 :
		root1 = (-b + math.sqrt(discriminant) )/ (2*a)
		root2 = (-b - math.sqrt(discriminant))/(2*a)
		return f"The roots are: {format(root1, '.2f')} and {format(root2, '.2f')}"
	elif discriminant == 0:
		root = -b / (2*a)
		return f"The root is: {format(root, '.2f')}"
	else:
		real = -b /(2*a)
		imag = math.sqrt(abs(discriminant)) /(2*a)
		return f"The roots are: {format(real,'.2f')}+{format(imag,'.2f')}j and {format(real,'.2f')}-{format(imag,'.2f')}j"
		
